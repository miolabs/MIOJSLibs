{
  "extends": [
    "tslint:latest"
  ],
  "rules": {
    "arrow-return-shorthand": false,
    "callable-types": false,
    "class-name": false,
    "curly": false,
    "comment-format": false,
    "deprecation": {
      "severity": "warn"
    },
    "eofline": false,
    "forin": false,
    "interface-name": false,
    "import-blacklist": [
      false,
      "rxjs",
      "rxjs/Rx"
    ],
    "import-spacing": false,
    "indent": [
      false,
      "spaces"
    ],
    "interface-over-type-literal": true,
    "label-position": false,
    "max-classes-per-file": false,
    "max-line-length": [
      false,
      140
    ],
    "member-access": false,
    "member-ordering": [
      false,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-submodule-imports": false,
    "no-bitwise": false,
    "no-reference": true,
    "no-console": [
      false,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-consecutive-blank-lines": false,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-dynamic-delete": false, // TODO: this could be useful
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-floating-promises": true,
    "no-inferrable-types": [
      false,
      "ignore-params"
    ],
    "no-invalid-template-strings": true,
    "no-misused-new": true,
    "no-non-null-assertion": false,
    "no-parameter-reassignment": false, // This would be useful
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": false,
    "no-this-assignment": false,
    "no-trailing-whitespace": false,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-unused-variable": false,
    "no-unsafe-finally": true,
    "no-magic-numbers": false,
    "no-use-before-declare": true,
    "no-var-keyword": false, //TODO: this could be useful
    "object-literal-key-quotes": false,
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,
    "one-line": [
      false,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "one-variable-per-declaration": false,
    "only-arrow-functions": false,
    "ordered-imports": false,
    "prefer-conditional-expression": false,
    "prefer-const": false,
    "prefer-for-of" : false,
    "quotemark": [
      false,
      "single"
    ],
    "radix": false,
    "restrict-plus-operands": false, // TODO: this could be useful
    "semicolon": [
      false,
      "always"
    ],
    "space-before-function-paren": false,
    "switch-default": false, // TODO: this could be useful
    "trailing-comma": false,
    "triple-equals": [
      false,
      "allow-null-check"
    ],
    "typedef": [false, "call-signature", "parameter", "member-variable-declaration"], //TODO: this could be useful
    "typedef-whitespace": [
      false,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": false,
    "whitespace": false,
    "no-default-export": true,
    "no-duplicate-imports": true,
    "encoding": true,
    "no-irregular-whitespace": true,
    "prefer-switch": true,
    "prefer-template": [false, "allow-single-concat"] //TODO: this would be useful
  }
}
